<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="3.7.0" group="fields" method="upgrade">
	<name>plg_fields_bpcheckbox</name>
	<author>${author.name}</author>
	<creationDate>${build.date}</creationDate>
	<copyright>Copyright (C) ${build.year} ${copyrights}. All rights reserved.</copyright>
	<license>${license.name}, see ${license.url}</license>
	<authorEmail>${author.email}</authorEmail>
	<authorUrl>${author.url}</authorUrl>
	<version>${version}</version>
	<description>PLG_FIELDS_BPCHECKBOX_XML_DESCRIPTION</description>
	<files>
		<filename plugin="bpcheckbox">bpcheckbox.php</filename>
		<folder>params</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_fields_bpcheckbox.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_fields_bpcheckbox.sys.ini</language>
		<language tag="pl-PL">pl-PL/pl-PL.plg_fields_bpcheckbox.ini</language>
		<language tag="pl-PL">pl-PL/pl-PL.plg_fields_bpcheckbox.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="directory"
					type="folderlist"
					label="PLG_FIELDS_BPCHECKBOX_PARAMS_DIRECTORY_LABEL"
					description="PLG_FIELDS_BPCHECKBOX_PARAMS_DIRECTORY_DESC"
					directory="images"
					hide_none="true"
					hide_default="true"
					recursive="true"
					default="/"
					>
					<option value="/">/</option>
				</field>

				<field
					name="multiple"
					type="radio"
					label="PLG_FIELDS_BPCHECKBOX_PARAMS_MULTIPLE_LABEL"
					description="PLG_FIELDS_BPCHECKBOX_PARAMS_MULTIPLE_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					filter="integer"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
